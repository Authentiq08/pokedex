<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:gravity="center">

    <!-- Icône Wi-Fi barrée pour signaler l'absence de connexion -->
    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wifi_slash_svgrepo_com"
        android:contentDescription="@string/wifi_off_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:tint="@color/dark" />

    <!-- Message d'erreur pour informer l'utilisateur -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_icon"
        android:layout_marginTop="8dp"
        android:text="@string/no_connection_message"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Sous-titre informatif -->
    <TextView
        android:id="@+id/error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_message"
        android:layout_marginTop="4dp"
        android:text="@string/check_internet"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Bouton pour rafraîchir la page -->
    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_description"
        android:layout_marginTop="24dp"
        android:text="@string/refresh"
        android:textColor="@color/white"
        android:backgroundTint="@color/progressBar"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textSize="16sp"
        android:drawablePadding="8dp" />

</RelativeLayout>
